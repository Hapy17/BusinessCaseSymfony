{% extends 'back/base.html.twig' %}

{% block body %}
    <h1>User index</h1>

    {{ form_start(filters) }}
    <table  class="table table-hover table-dark table-striped ">
        <thead>
            <tr>
                <th>
                    {{
                    knp_pagination_sortable(
                        users,
                        'Mail',
                        'user.email'
                    )|raw
                    }}
                    {{form_widget(filters.email)}}
                </th>
                <th>
                    {{
                    knp_pagination_sortable(
                        users,
                        'Username',
                        'user.username'
                    )|raw
                    }}
                    {{form_widget(filters.username)}}
                </th>
                <th>
                    {{
                    knp_pagination_sortable(
                        users,
                        'Roles',
                        'user.roles'
                    )|raw
                    }}
                    {{form_widget(filters.roles)}}
                </th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Née le</th>
                <th>Compte créé le</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.birthAt ? user.birthAt|date('Y-m-d') : '' }}</td>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_user_back_show', {'id': user.id}) }}">
                        <i class="fas fa-magnifying-glass"></i>
                    </a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ form_start(filters) }}
    <div class="navigation d-flex justify-content-center my-3">
            {{ knp_pagination_render(users) }}
    </div>

{% endblock %}
