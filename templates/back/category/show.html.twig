{% extends 'back/base.html.twig' %}


{% block body %}
    <h1>Détails catégorie</h1>
        <div class="col-6">
            <table class="table table-hover table-dark table-striped ">
                <tbody>
                    <tr>
                        <th>Label</th>
                        <td>{{ category.label }}</td>
                    </tr>
                    {% if category.relatedCategory is not null %}
                    <tr>
                        <th>Catégorie parente</th>
                        <td>{{ category.relatedCategory.label }}</td>
                    </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>


    

    <div class="d-flex flex-column-reverse mb-2">
        <a href="{{ path('app_admin_category_index') }}">Retour à la liste </a>
        <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}">Modifier</a>
    </div>

    {{ include('back/category/_delete_form.html.twig') }}
{% endblock %}
