{% extends 'back/base.html.twig' %}


{% block body %}
    <h1>Produit</h1>

    <table class="table table-hover table-dark table-striped ">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>prix HT</th>
                <td>{{ product.priceHt }}€</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{{ product.isActive ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex flex-column-reverse mb-2">
        <a href="{{ path('app_admin_product_index') }}">Retour à la liste</a>
        <a href="{{ path('app_admin_product_edit', {'id': product.id}) }}">Modifier</a>
    </div>

    {{ include('back/product/_delete_form.html.twig') }}
{% endblock %}
